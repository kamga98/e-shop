{% extends '@SyliusShop/layout.html.twig' %}

{% block content %}
    <h2>Finalisez votre paiement</h2>
 
    <div id="paypal-button-container"></div>
    <div id="result-message"></div>

    
    <script
            src="https://www.paypal.com/sdk/js?client-id={{ PAYPAL_CLIENT_ID }}&buyer-country=US&currency=USD&components=buttons&enable-funding=venmo,paylater,card"
            data-sdk-integration-source="developer-studio"
    ></script>  

    <script>
            window.CART = {{ cart.items|json_encode(constant('JSON_UNESCAPED_UNICODE'))|raw }};
    </script>
    
    <script src="{{ asset('build/shop/paypal.js') }}"></script>
{% endblock %}    
        